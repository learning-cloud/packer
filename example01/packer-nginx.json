{
  "_comment": "WebApp base AMI using Amazon Linux (amzn-ami-hvm-2018.03.0.20180811-x86_64-ebs)",
  "variables": {
    "ami_name": "packer-nginx-base-ami-{{isotime \"20060102.1504\"}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "profile": "packer",
    "region": "ap-northeast-2",
    "source_ami": "ami-0a93a08544874b3b7",
    "associate_public_ip_address":"true",
    "instance_type": "t3.micro",
    "ssh_username": "ec2-user",
    "ami_name": "{{user `ami_name`}}",
    "ami_description": "Nginx with Amazon Linux2",
    "tags": {
    	"Name": "{{user `ami_name`}}",
    	"BaseAMI_Id": "{{ .SourceAMI }}",
    	"BaseAMI_Name": "{{ .SourceAMIName }}"
    }
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook/nginx.yml"
    }
  ]  
}
